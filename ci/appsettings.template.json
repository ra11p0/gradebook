{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultAppDatabase": "{defaultDbConnectionString}"
  },
  "adminEmail": "p.lenczewski@icloud.com",
  "smtp": {
    "host": "{smtpHost}",
    "port": "{smtpPort}",
    "username": "{smtpUsername}",
    "password": "{smtpPassword}",
    "defaultSender": "{smtpDefaultSender}",
    "defaultSenderName": "{defaultSenderName}"
  },
  "Urls": "{applicationUrl}{apiPort}",
  "TargetUrl": "{targetUrl}",
  "JWT": {
    "ValidAudience": "{applicationUrl}",
    "ValidIssuer": "{applicationUrl}",
    "Secret": "{jwtSecret}",
    "TokenValidityInMinutes": 15,
    "RefreshTokenValidityInDays": 7
  }
}
